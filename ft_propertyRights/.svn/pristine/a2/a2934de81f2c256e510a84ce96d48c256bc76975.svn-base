<%@ page contentType="text/html;charset=UTF-8" %>
<%@ taglib prefix="tags" tagdir="/WEB-INF/tags" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jstl/fmt_rt" %>
<!DOCTYPE html>
<html>
<head>
    <title>申诉信息登记</title>
    <%@include file="/static/common/common.jsp"%>
    <script>
        $(document).ready(function () {
            $("#inputForm").validate({
            });
        });
    </script>
</head>
<body>
<div class="title">
    <h5>申诉信息登记</h5>
</div>
<div class="content">
    <form class="form-horizontal" id="inputForm" method="post" action="save?<tags:searchParams/>">
        <input type="hidden" name="complainId" id="complainId" value="${complaintFeedback.id}"/>
        <input type="hidden" name="dataType" value="1"/>
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <td class="fieldName">姓名：</td>
                    <td class="fieldValue">
                        <input type="text" name="name" class="form-control_short required" value="${complaintFeedback.name}"/>
                        <span class="require">*</span>
                    </td>
                    <td class="fieldName">申诉日期：</td>
                    <td class="fieldValue">
                        <input type="text" name="date" class="form-control form-date-time datepicker dateISO"
                               value="<fmt:formatDate value='${complaintFeedback.date}' pattern='yyyy-MM-dd'/>"/>
                    </td>
                </tr>
                <tr>
                    <td class="fieldName">现居住地址：</td>
                    <td class="fieldValue">
                        <input type="text" name="address" class="form-control_short" value="${complaintFeedback.address}"/>
                    </td>
                    <td class="fieldName">联系电话：</td>
                    <td class="fieldValue">
                        <input type="text" name="phone" class="form-control_short" value="${complaintFeedback.phone}"/>
                    </td>
                </tr>
                <tr>
                    <td class="fieldName">职业：</td>
                    <td class="fieldValue">
                        <input type="text" name="job" class="form-control_short" value="${complaintFeedback.job}"/>
                    </td>
                    <td class="fieldName">工作单位：</td>
                    <td class="fieldValue">
                        <input type="text" name="workUnit" class="form-control_short" value="${complaintFeedback.workUnit}"/>
                    </td>
                </tr>
                <tr>
                    <td class="fieldName">申诉事项：</td>
                    <td class="fieldValue" colspan="3">
                        <textarea name="matter" class="form-control" style="width:1000px;height:100px">${complaintFeedback.matter}</textarea>
                    </td>
                </tr>
                </tbody>
            </table>
        <div class="footer">
            <button class="btn btn-primary btn-sm" id="submitButton" type="submit"><i class="fa fa-save"></i>&nbsp;保存</button>
            &nbsp;&nbsp;
            <button class="btn btn-white btn-sm" type="button" onclick="javascript:history.back()"><i class="fa fa-backward"></i>&nbsp;返回</button>
        </div>
    </form>
    <br>
</div>
</body>
</html>
