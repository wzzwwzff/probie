     */
    public void  deleteByFamilyId(Integer familyId){
        Family family = this.get(familyId);
        if (family == null) {
            throw new SqdsException("家庭信息不存在");
        }

        familyPersonService.deleteByFamilyId(familyId);
        this.delete(familyId);
    }

